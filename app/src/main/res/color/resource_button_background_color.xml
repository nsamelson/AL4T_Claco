<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="@color/black" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#D3D3D3" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="@color/teal_200" />
    <!--Default Background Color -->
    <item android:color="@android:color/white" />

</selector>